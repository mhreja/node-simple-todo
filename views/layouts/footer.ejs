<!-- Success || Danger Message on Toast-->
<% if(success && success != ''){ %>
    <div
  class="toast"
  style="position: absolute; top: 10px; right: 10px; min-width: 250px;"
  data-autohide="true" data-animation="true" data-delay="2000">
  <div class="toast-header">
    <i class="fa fa-check text-success font-weight-bold"></i> &nbsp;
    <strong class="mr-auto text-success"> Success</strong>
    <small>Just Now</small>
    <button
      type="button"
      class="ml-2 mb-1 close"
      data-dismiss="toast"
      aria-label="Close"
    >
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="toast-body" id="toastBody">
    <%= success %>
  </div>
</div>

<% }else if(danger && danger != ''){ %>
    <div
  class="toast"
  style="position: absolute; top: 10px; right: 10px; min-width: 250px;"
  data-autohide="true" data-animation="true" data-delay="2000">
  <div class="toast-header">
    <i class="fa fa-exclamation-triangle text-danger font-weight-bold"></i>
    &nbsp;
    <strong class="mr-auto text-danger"> Attention</strong>
    <small>Just Now</small>
    <button
      type="button"
      class="ml-2 mb-1 close"
      data-dismiss="toast"
      aria-label="Close"
    >
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="toast-body" id="toastBody">
    <%= danger %>
  </div>
</div>

<% } %>
<!-- END of Success || Danger Message on Toast-->

